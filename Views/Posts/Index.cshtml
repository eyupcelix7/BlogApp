@model PostsViewModel
<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">Popüler Yazılar</h1>
            @foreach (var post in Model.Posts.OrderByDescending(x => x.PostId).Take(10)){
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src = "~/img/@post.Image" class="img-fluid rounded" alt="@post.Title" />
                        </div>
                        <div class="col-8">
                            <h5>
                                <a href="/posts/details/@post.Url" class="btn-link fw-bold">@post.Title</a>
                            </h5>
                            <p>@post.Description</p>
                            @foreach(var tag in post.Tags)
                            {
                                <a href="/posts/tag/@tag.Url" class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">@tag.Text</a>
                            }
                        </div>
                    </div> 
                </div>
                <hr class="my-3">
            }
