@model List<Post>
<div class="row">
	<div class="col-12">
		<h2>Yazı Listesi</h2>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th style="width:200px;">Resim</th>
					<th>Durum</th>
					<th>Başlık</th>
					<th>Kısa Açıklama</th>
					<th>Yorum Sayısı</th>
					<th>Yayınlanma Tarihi</th>
					<th style="width:190px;">İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach(Post item in Model.OrderByDescending(x=> x.PostId))
				{
					<tr>
						<td><img src="~/img/@item.Image" class="img-fluid" alt="@item.Title" /></td>
						@if (item.IsActive)
						{
							<td class='text-success'>Aktif</td>
						}
						else
						{
							<td class='text-danger'>Pasif</td>
						}
						<td>@item.Title</td>
						<td>@item.Description</td>
						<td>@item.Comments.Count()</td>
						<td>@item.PublishedOn</td>
						<td>
							<a href="/posts/details/@item.Url" class="btn btn-sm btn-info text-white">Git</a>
							<a href="/posts/edit/@item.PostId" class="btn btn-sm btn-warning text-white">Düzenle</a>
							<a href="/posts/delete/@item.PostId" class="btn btn-sm btn-danger">Sil</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>