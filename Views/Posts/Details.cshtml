@model Post
@section Styles{
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
}
<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.Title</h1>
            <div class="tags">
                @foreach(var tag in Model.Tags)
                {
                    <a href="posts/tag/@tag.Url" class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">@tag.Text</a>
                }
            </div>
            <img src="~/img/@Model.Image" class="img-fluid rounded" alt="@Model.Title"/>
            <div class="content" id="content">
                @Model.Content
            </div>
        </div>
        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-header pb-0">
                    <h4 class="">@Model.Comments.Count() Adet Yorum</h4>
                </div>
                <div class="card-body">
                    @foreach(var comment in Model.Comments)
                    {
                        <div class="my-4 d-flex">
                            <img src="~/img/@comment.User.Image" class="avatar rounded-circle float-start me-3" alt="@comment.User.UserName" />
                            <div>
                                <div class="mb-2 d-flex">
                                    <h6 class="me-2">@comment.User.UserName</h6>
                                    <small>@comment.PublishedOn.ToShortDateString()</small>
                                </div>
                                <p>@comment.CommentText</p>
                            </div>
                        </div>
                    }
                    <hr class="my-4" />
                    <div>
                        <h4 class="mb-3">Yorum Ekle</h4>
                        <form action="/posts/AddComment" method="POST">
                            <input type="hidden" name="PostId" value="@Model.PostId" />
                            <input type="hidden" name="Url" value="@Model.Url" />
                            <div class="mb-3">
                                <label for="UserName" class="form-label">Görünecek Ad</label>
                                <input type="text" name="UserName" id="UserName" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="Text" class="form-label">Yorum</label>
                                <textarea name="Text" id="Text" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="form-control">Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>
    </div>
</div>
@section Scripts{
    <script>
        var gelenVeri = "@Model.Content";
        document.getElementById("content").innerHTML = marked.parse(gelenVeri);
    </script>
}